page{
  -webkit-tap-highlight-color: rgba(0,0,0,0);
}
swiper{
  height: 400rpx;
}
swiper-item image{
  width: 100%;
  height: 100%;
} 
.content{
  margin: 30rpx;
}
.content .search{ 
  background: #e2e9e2;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  text-align: center;
  font-size: 24rpx;
  color:rgb(131, 127, 127);
  position: relative;
  margin-bottom: 80rpx;
}
.content .search image{
  position: absolute;
  top: 20rpx;
  left: 200rpx;
  width: 44rpx;
  height: 44rpx;
}
.hot_products{
  text-align: center;
}
.hot_products .good{
   width: 60rpx;
   height: 60rpx;
}
.hot_products .content_titie{
  /* font-weight: bold; */
  letter-spacing: 0.3rem;
  font-size: 40rpx;
}
.hot_products .content_title_desc{
  color:#ccc;
  font-size: 24rpx;
}
.product_intro{
  width: 100%;
  height: 200rpx;
  position: relative;
  padding: 30rpx;
}
.product_intro image{
  height: 200rpx;
  width: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.product_intro .product_info{
  margin-left: 220rpx;
  /* background: yellow; */
  width: 100%;
  height: 200rpx;
  text-align: left;
} 
.product_info .productName{
  letter-spacing: 0.05em;
}
.product_info .productName_desc{
  font-size: 28rpx;
  margin-bottom: 40rpx;
  color:rgb(109, 102, 102);
}
.product_intro .product_price::after{
  content:'';
  position: absolute;
  right: 90rpx;
  bottom: 68rpx;
  border-top: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
  border-left: 12rpx solid #333;
}
.discount_price{
  color:red;
  margin-right: 10rpx;
}
.original_price{
  font-size: 28rpx;
  text-decoration:line-through;
  color:#ccc;
}
.category .bar{
  display: inline-block;
  width: 33.3333%;
  height: 60rpx;
  text-align: center;
  font-size: 30rpx;
  box-sizing: border-box;
}

.category .on{
  color: red;
  border-bottom: 1px solid red;
}
.skinCare{
  background: #ffffff;
}
.skinCare .skinCare_content{
  display: inline-block;
  width: 50%;
  height: 400rpx;
  text-align: center;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.skinCare image{
  width: 200rpx;
  height:200rpx;
}
.skinCare .productName{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical; 
  text-align: left;
  font-size: 30rpx;
  color: #333333;
}
.skinCare .product_price{
  text-align: left;
  padding-top: 20rpx;
}

